{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@auth/*": ["auth/*"],
      "@profile/*": ["profile/*"],
      "@src/*": ["./*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test-setup.ts"
  ]
}
